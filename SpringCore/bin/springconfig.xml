<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <bean id="product" class="com.spring.core.Product">
  
	<constructor-arg name="productId" value="123"></constructor-arg>
	<constructor-arg name="productName" value="Apple"></constructor-arg>
	<constructor-arg name="productDesc" value="Mobile"></constructor-arg>
	<constructor-arg name="productPrice" value="150000"></constructor-arg>

</bean>
 </beans>